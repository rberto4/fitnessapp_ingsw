<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.NuovaSchedaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/azzurro_500"
            android:elevation="8dp"
            >
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/id_nuovoesercizio_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/azzurro_500"
                app:title="Crea nuova scheda"
                app:navigationIconTint="@color/white"
                app:titleTextColor="@android:color/white">

            </com.google.android.material.appbar.MaterialToolbar>

            <TextView
                android:id="@+id/id_nuovascheda_giorno_selezionato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mercoledi"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                >

                <TextView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/cerchio_rosso"
                    android:backgroundTint="@color/white"
                    android:text="L"
                    android:textSize="18dp"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:id="@+id/id_nuovascheda_lunedi"
                    android:elevation="2dp"
                    />

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/cerchio_rosso"
                    android:backgroundTint="@color/arancio_500"
                    android:textColor="@color/white"
                    android:text="m"
                    android:textSize="18dp"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:id="@+id/id_nuovascheda_martedi"
                    android:elevation="2dp"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/cerchio_rosso"
                    android:backgroundTint="@color/white"
                    android:text="m"
                    android:textSize="18dp"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:id="@+id/id_nuovascheda_mercoledi"
                    android:elevation="2dp"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/cerchio_rosso"
                    android:backgroundTint="@color/white"
                    android:text="g"
                    android:textSize="18dp"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:id="@+id/id_nuovascheda_giovedi"
                    android:elevation="2dp"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/cerchio_rosso"
                    android:backgroundTint="@color/white"
                    android:text="v"
                    android:textSize="18dp"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:id="@+id/id_nuovascheda_venerdi"
                    android:elevation="2dp"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/cerchio_rosso"
                    android:backgroundTint="@color/white"
                    android:text="s"
                    android:textSize="18dp"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:id="@+id/id_nuovascheda_sabato"
                    android:elevation="2dp"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/cerchio_rosso"
                    android:backgroundTint="@color/white"
                    android:text="d"
                    android:textSize="18dp"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:id="@+id/id_nuovascheda_domenica"
                    android:elevation="2dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:hint="Nome scheda..."
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:id="@+id/id_nuovoworkout_nome"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_icona_calendario_range"
                    app:tint="@color/white"
                    android:background="@drawable/cerchio_rosso"
                    android:backgroundTint="@color/azzurro_500"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:text="Data inizio della scheda"
                    android:textSize="18sp"
                    android:id="@+id/id_nuovascheda_inizio"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:padding="12dp"
                android:text="Data fine della scheda"
                android:layout_marginStart="58dp"
                android:textSize="18sp"
                android:id="@+id/id_nuovascheda_fine"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_icona_note"
                    app:tint="@color/white"
                    android:background="@drawable/cerchio_rosso"
                    android:backgroundTint="@color/azzurro_500"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    ></ImageView>

                <EditText
                    android:id="@+id/id_nuovoworkout_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Aggiungi una nota..."
                    android:textSize="18sp"
                    />
            </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/id_nuovascheda_salva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salva"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/arancio_500"
        />
</RelativeLayout>