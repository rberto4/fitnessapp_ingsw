<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/id_dialog_nomiesercizi_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azzurro_500"
        android:elevation="8dp"
        app:title="Recupero"
        app:navigationIconTint="@color/white"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_icona_chiudi"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/id_dialog_recupero_minuti_piu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_icona_arrow_up"
                app:tint="@color/arancio_500"
                android:background="@drawable/cerchio_rosso"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:padding="8dp"
                android:elevation="2dp"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/id_dialog_recupero_minuti"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:text="00"
                android:inputType="number"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="24dp"
                />
            <ImageView
                android:id="@+id/id_dialog_recupero_minuti_meno"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_icona_dropdownarrow"
                app:tint="@color/arancio_500"
                android:background="@drawable/cerchio_rosso"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:padding="8dp"
                android:elevation="2dp"
                android:clickable="true"
                />
        </LinearLayout>


        <TextView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text=":"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="24sp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/id_dialog_recupero_secondi_piu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_icona_arrow_up"
                app:tint="@color/arancio_500"
                android:background="@drawable/cerchio_rosso"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:padding="8dp"
                android:elevation="2dp"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/id_dialog_recupero_secondi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:text="00"
                android:inputType="number"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="24dp"
                />
            <ImageView
                android:id="@+id/id_dialog_recupero_secondi_meno"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_icona_dropdownarrow"
                app:tint="@color/arancio_500"
                android:background="@drawable/cerchio_rosso"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:padding="8dp"
                android:elevation="2dp"
                android:clickable="true"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>