<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="1"
                android:layout_gravity="center|top"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/cerchio_rosso"
                android:id="@+id/id_cardworkout_esercizio_index"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nome esercizio"
                android:textSize="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/id_cardworkout_esercizio_nome"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icona_freccia"
        app:tint="@color/azzurro_500"
        android:id="@+id/id_cardworkout_esercizio_freccia"
        android:layout_gravity="center"
        android:visibility="visible"
        />

</LinearLayout>

