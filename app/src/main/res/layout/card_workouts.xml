<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/id_cardworkout_checkbox"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/id_cardworkout_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Nome workout"
            android:textStyle="bold"
            android:maxWidth="160dp"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="end|center"
            >
            <ImageView
                android:id="@+id/id_cardworkout_note"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_icona_note"
                android:layout_marginEnd="8dp"
                android:background="@drawable/cerchio_rosso"
                android:padding="6dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/id_cardworkout_giornosettimana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_chip_giornosettimana"
                android:padding="8dp"
                android:text="Lunedi"
                android:alpha="0.8"
                android:gravity="center"
                android:textColor="@color/azzurro_500"
                android:textSize="12sp"
                android:elevation="2dp"
                android:drawableStart="@drawable/ic_icona_calendario"
                android:drawableTint="@color/azzurro_500"
                android:drawablePadding="4dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/id_card_workout_popupmenu"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="&#8942;"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/id_rv_workouts_list_esercizi"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="16dp"

        />
</LinearLayout>