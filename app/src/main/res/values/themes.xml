<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azzurro_500</item>
        <item name="colorPrimaryVariant">@color/azzurro_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/arancio_500</item>
        <item name="colorSecondaryVariant">@color/arancio_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="spinnerTheme">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="itemTextColor">@android:color/tertiary_text_light</item>
        <item name="android:textSize">18dp</item>
    </style>


</resources>